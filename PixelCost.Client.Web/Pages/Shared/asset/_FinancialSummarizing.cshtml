@model FinancialSummarizing

<div class="w-100">
    <span class="SumFinancialTitle" style="color: #@(Model?.color);">@Model?.Title</span>
    <div class="SumFinancialMainLabelBody" style="border-top-color: #@(Model?.color); background-color: #@(Model?.color)44;">
        <div class="row justify-content-between">
            <div class="col-8">
                <span class="SumFinancialText">@Model?.MainLabel01</span>
            </div>
            <div class="col-4 text-end">
                <span class="SumFinancialText">@Model?.MainValue01</span>
            </div>
        </div>
       <div class="row justify-content-between">
            <div class="col-8">
                <span class="SumFinancialText">@Model?.MainLabel02</span>
            </div>
            <div class="col-4 text-end">
                <span class="SumFinancialText">@Model?.MainValue02</span>
            </div>
        </div>
    </div>

    <div style="color: #@(Model?.color); border-bottom: solid; border-color: #@(Model?.color);">
        <div class="row justify-content-between" >
            <div class="col-8">
                <span class="SumFinancialListTitle">@Model?.SumLabel</span>
            </div>
            <div class="col-4 text-end">
                <span class="SumFinancialListTitle">@Model?.SumValue</span>
            </div>
        </div>
    </div>

    @for (int i = 0; i < (Model?.ListValue?.Count() ?? 0); i++)
    {
        <div class="row justify-content-between">
            <div class="col-8">
                <span class="SumFinancialListText">@Model?.ListLabel?.ElementAt(i)</span>
            </div>
            <div class="col-4 text-end">
                <span class="SumFinancialListText">@Model?.ListValue?.ElementAt(i)</span>    
            </div>
        </div>
    }

</div>