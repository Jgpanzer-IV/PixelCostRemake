@model ProgressItem


<div class="ProgressItemBody">
    <div class="d-flex flex-column justify-content-between h-100">
        <div class="d-flex flex-grow-1 flex-row justify-content-between">
            <div class="w-auto">
                <span class="ProgressMainText">
                    @Model?.MainText
                </span>
                <span class="ProgressDescript">
                    @Model?.Description
                </span>
                <div class="ProgressPipContainer">
                    <div class="ProgressPipBody" style="width: @(Model?.Progress ?? 0)%;"></div>
                </div> 
            </div>
            <span class="ItemName">@Model?.ItemName</span>
        </div>
        <div class="d-flex flex-grow-1 flex-row justify-content-between">
            <span class="ProgressInfo">@(Model?.InformationText ?? "None") </span>
            <span class="ItemValue">@(Model?.Value ?? "None")</span>
        </div>
    </div>
</div>