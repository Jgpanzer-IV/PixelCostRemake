@page
@model PixelCost.Identity.Pages.Register.Index
@{

	string unExspectedProblem = (string) ViewData["UnExspectedProblem"];
}

<div class="my-5">
	<h1 class="text-center display-4">Sign up</h1>
	<h5 class="text-center text-muted">Pixel Cost</h5>
</div>

<div class="row justify-content-center mt-5">
	<div class="col-xl-6 col-lg-7 col-md-8 col-sm-10 col">
		<div class="w-100">
			<form method="post">
				<div class="row">
					<div class="col col-sm-6">
						<div class="form-group my-3">
							<label asp-for="registerModel.UserName" class="text-muted"></label>
							<span asp-validation-for="registerModel.UserName" class="d-block text-danger"></span>
							<input asp-for="registerModel.UserName" class="form-control" />
						</div>
						<div class="form-group my-3">
							<label asp-for="registerModel.Jobtitle" class="text-muted"></label>
							<span asp-validation-for="registerModel.Jobtitle" class="d-block text-danger"></span>
							<input asp-for="registerModel.Jobtitle" class="form-control" />
						</div>
						<div class="form-group my-3">
							<label asp-for="registerModel.InitialCost" class="text-muted"></label>
							<span asp-validation-for="registerModel.InitialCost" class="d-block text-danger"></span>
							<input asp-for="registerModel.InitialCost" class="form-control" />
						</div>
						

					</div>
					<div class="col col-sm-6">
						<div class="form-group my-3">
							<label asp-for="registerModel.Email" class="text-muted"></label>
							<span asp-validation-for="registerModel.Email" class="d-block text-danger"></span>
							<input asp-for="registerModel.Email" class="form-control" />
						</div>

						<div class="form-group my-3">
							<label asp-for="registerModel.Password" class="text-muted"></label>
							<span asp-validation-for="registerModel.Password" class="d-block text-danger"></span>
							<input asp-for="registerModel.Password" class="form-control" />
						</div>
						<div class="form-group my-3">
							<label asp-for="registerModel.ConfirmPassword" class="text-muted"></label>
							<span asp-validation-for="registerModel.ConfirmPassword" class="d-block text-danger"></span>
							<input asp-for="registerModel.ConfirmPassword" class="form-control" />
						</div>
					</div>
				</div>

				<div asp-validation-summary="All"></div>
				@if (!string.IsNullOrEmpty(unExspectedProblem))
				{
					<p class="text-danger text-center">@unExspectedProblem</p>	
				}

				<button type="submit" class="btn btn-danger  text-light w-100">Sign Up</button>
				<button type="submit" asp-page-handler="Login" class="btn w-100 text-muted">Sign in</button>
			</form>
		</div>

	</div>

</div>

