@page
@model PixelCost.Service.Identity.Pages.Login.Index

<div class="login-page">
    <div class="lead">
        <h1 class="text-center my-5">Sign-in</h1>
    </div>


    <div class="row justify-content-center">
        <div class="col-10 col-md-8 col-lg-6 col-xl-5">
            <partial name="_ValidationSummary" />
            @if (Model.View.EnableLocalLogin)
            {
                <form asp-page="/Account/Login/Index" class="mt-5">
                    <input type="hidden" asp-for="Input.ReturnUrl" />

                    @if (Model.View.AllowRememberLogin)
                    {
                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="Input.RememberLogin">
                                <label class="form-check-label" asp-for="Input.RememberLogin">
                                    Remember My Login
                                </label>
                            </div>
                        </div>
                    }

                    <div class="form-group my-4">
                        <input class="form-control" placeholder="Username" asp-for="Input.Username" autofocus>
                    </div>
                    <div class="form-group my-4">
                        <input type="password" class="form-control" placeholder="Password" asp-for="Input.Password" autocomplete="off">
                    </div>

                    <button class="btn btn-danger w-100 mt-2" name="Input.Button" value="login">Sign in</button>
                    <div class="row">
                        <div class="col col-sm-6">
                            <button class="btn mt-1 w-100 text-left" name="Input.Button" value="cancel">Cancel</button>
                        </div>
                        <div class="col col-sm-6">
                            <a href="@Url.PageLink("/Account/Register/Index")">
                                <div style="height: 80px; background-color:antiquewhite" class="btn w-100 mt-1 text-right">
                                    <span>Sign up</span>
                                </div>
                            </a>
                        </div>
                    </div>
                </form>
            }
        </div>
    </div>
</div>